{
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8,
        "ecmaFeatures": {
          "experimentalObjectRestSpread": true,
          "jsx": true
      }
    },
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "webextensions": true
    },
    "root": true,
    "rules": {
      "quotes": [2, "single", "avoid-escape"],
      "jsx-quotes": ["error", "prefer-double"],
      "no-debugger": 2,
      "no-var": 2,
      "semi": [2, "never"],
      "no-trailing-spaces": 2,
      "eol-last": [2, "always"],
      "no-underscore-dangle": 0,
      "no-alert": 2,
      "no-lone-blocks": 0,
      "global-require": 0,
      "comma-dangle": ["error", {
        "arrays": "never",
        "objects": "always-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "ignore"
      }],
      "no-confusing-arrow": [2, {"allowParens": true}],
      "arrow-body-style": 0,
      "class-methods-use-this": 0,
      "indent": [ "error", 4, { "SwitchCase": 1 } ],
      "func-names": 0,
      "no-mixed-operators": ["error", {"allowSamePrecedence": true}],
      "no-unused-vars": ["error"],
      "prefer-const": "error"
    }
  }
