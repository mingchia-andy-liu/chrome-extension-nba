{
    "manifest_version": 2,

    "name": "Box Scores",
    "description": "This extension shows you the daily box score of NBA games.",
    "version": "1.1.0.0",

    "icons": {
        "16": "/src/assets/png/icon-color-16.png",
        "48": "/src/assets/png/icon-color-48.png",
        "128": "/src/assets/png/icon-color-128.png"
    },


    "browser_action": {
        "default_popup": "/src/popup.html"
    },

    "background": {
        "scripts": [
            "/src/thirdparty/jquery/jquery-3.1.1.min.js",
            "/src/js/background/background.js"
        ],
        "persistent": false
    },

    "options_page": "options.html",

    "permissions": [
        "storage",
        "alarms",
        "http://*.nba.com/"
    ]
}