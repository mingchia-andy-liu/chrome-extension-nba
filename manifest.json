{
    "manifest_version": 2,

    "name": "Box Scores",
    "description": "This extension shows you the daily box scores.",
    "version": "1.1.5",

    "icons": {
        "16": "/src/assets/png/icon-color-16.png",
        "48": "/src/assets/png/icon-color-48.png",
        "128": "/src/assets/png/icon-color-128.png"
    },

    "browser_action": {
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": [
            "/src/vendor/moment/moment.min.js",
            "src/vendor/moment/moment-timezone.min.js",
            "src/vendor/moment/moment-timezone-data.min.js",
            "/src/vendor/jquery/jquery-3.1.1.min.js",
            "/src/js/common/utils.js",
            "/src/js/common/games.js",
            "/src/js/common/date_utils.js",
            "/src/js/alarms/alarms.js",
            "/src/js/alarms/listeners.js",
            "/src/js/background/background.js",
            "/src/js/ga.js"
        ],
        "persistent": false
    },

    "options_page": "options.html",

    "permissions": [
        "storage",
        "alarms",
        "https://*.nba.com/"
    ],

    "content_security_policy": "script-src 'self' https://www.google-analytics.com/analytics.js; object-src 'self'"
}