{
    "manifest_version": 2,

    "name": "Basketball Box Scores",
    "description": "This extension shows you the daily basketball box scores.",
    "version": "1.2.5",

    "icons": {
        "16": "assets/png/icon-color-16.png",
        "48": "assets/png/icon-color-48.png",
        "128": "assets/png/icon-color-128.png"
    },

    "browser_action": {
        "default_popup": "index.html",
        "default_icon": {
            "48": "assets/png/icon-color-48.png"
        }
    },

    "background": {
        "scripts": [
            "background.min.js"
        ],
        "persistent": false
    },

    "permissions": [
        "storage",
        "alarms",
        "*://*.nba.com/",
        "*://*.nba.net/"
    ],

    "optional_permissions": ["webRequest", "https://boxscoresORsomething.net/" ],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
