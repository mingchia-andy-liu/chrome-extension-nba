    "version": "0.1.0",
    "command": "yarn",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "args": ["run", "build"]
        },
        {
            "taskName": "release",
            "args": ["run", "release"]
        },
        {
            "taskName": "test",
            "args": ["run", "test"]
        }
    ]
}