{
  "name": "chrome-extension-nba",
  "version": "1.4.7",
  "description": "This is a browser extension shows the daily box score for NBA games.",
  "author": "Liu, Ming Chia",
  "directories": {
    "test": "test"
  },
  "webExt": {
    "sourceDir": "src/build",
    "artifactsDir": "dist"
  },
  "scripts": {
    "build": "web-ext build --overwrite-dest",
    "lint:addon": "echo see build.sh",
    "lint:js:fix": "eslint src/app --fix && prettier --write src/app --loglevel=silent",
    "lint:js": "eslint src/app && prettier --check src/app",
    "start:dev": "NODE_ENV=development webpack-dev-server --open",
    "start": "webpack-dev-server --open",
    "webpack:bg": "webpack --config bg.webpack.config.js",
    "webpack:dev": "NODE_ENV=development webpack --progress --colors",
    "webpack": "NODE_ENV=production webpack --progress --colors"
  },
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mingchia-andy-liu/chrome-extension-nba.git"
  },
  "bugs": {
    "url": "https://github.com/mingchia-andy-liu/chrome-extension-nba/issues"
  },
  "homepage": "https://github.com/mingchia-andy-liu/chrome-extension-nba#readme",
  "devDependencies": {
    "addons-linter": "^1.24.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "cryptiles": "^4.1.3",
    "css-loader": "^3.6.0",
    "eslint": "^7.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^2.0.5",
    "prop-types": "^15.7.2",
    "redux-devtools": "^3.6.0",
    "redux-devtools-log-monitor": "^1.4.0",
    "style-loader": "^1.2.1",
    "web-ext": "^5.0.0",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "moment-timezone": "^0.5.31",
    "query-string": "^6.13.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-flatpickr": "^3.10.4",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.1",
    "redux-thunk": "^2.2.0",
    "styled-components": "^3.4.10"
  }
}
